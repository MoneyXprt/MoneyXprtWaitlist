#############################
# MoneyXprt Environment File #
#############################

# Public Site URL (used in links; can be same as Vercel URL)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
# Optional alias; either APP_URL or SITE_URL should be set
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app

# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key # server-side only; never expose to browser

# Database (required for server-side storage/Drizzle)
DATABASE_URL=postgres://user:pass@host:5432/db

# OpenAI (required for AI features)
OPENAI_API_KEY=sk-your-openai-key

# Observability (optional)
# Public Sentry DSN used by the browser SDK. Leave blank to disable.
NEXT_PUBLIC_SENTRY_DSN=
# Optional environment label (development|preview|production)
NEXT_PUBLIC_SENTRY_ENV=development

# Stripe (required if payments enabled)
STRIPE_SECRET_KEY=sk_test_your_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook
# Optional price and publishable key (if used client-side, prefer NEXT_PUBLIC_*)
STRIPE_PRICE_ID_STARTER=price_123
VITE_STRIPE_PUBLIC_KEY=pk_test_your_publishable

# Feature flags (optional)
NEXT_PUBLIC_ENABLE_PLANNER=true
NEXT_PUBLIC_SKIP_AUTH=false
NEXT_PUBLIC_SHOW_DEBUG=0

# Local dev server (optional)
START_EXPRESS=false
PORT=5000
